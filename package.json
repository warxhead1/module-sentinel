{
  "name": "@planet-procgen/module-sentinel-mcp",
  "version": "1.0.0",
  "description": "Module Sentinel MCP Server - Intelligent C++ Module Analysis for Planet ProcGen",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "module-sentinel-mcp": "dist/index.js",
    "module-sentinel-config": "dist/cli/config-manager.js"
  },
  "scripts": {
    "build": "npm run build:rust && tsc && npm run build:dashboard",
    "build:rust": "napi build --platform --release --pipe \"prettier -w\"",
    "build:rust:debug": "napi build --platform --pipe \"prettier -w\"",
    "build:dashboard": "vite build",
    "dev": "npm run build && concurrently --names \"TSC,SERVER\" --prefix-colors \"blue,green\" \"tsc --watch\" \"npm run dev:server\"",
    "dev:server": "sleep 2 && NODE_ENV=development tsx --watch src/dashboard-server.ts",
    "start:mcp": "npm run build && node dist/index.js",
    "start:dashboard": "npm run build && tsx src/dashboard-server.ts",
    "lint": "eslint --config eslint.config.js src/**/*.ts --ignore-pattern 'src/**/*.test.ts'",
    "lint:fix": "eslint --config eslint.config.js src/**/*.ts --ignore-pattern 'src/**/*.test.ts' --fix",
    "lint:check": "eslint --config eslint.config.js src/**/*.ts --ignore-pattern 'src/**/*.test.ts' --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist dashboard/dist *.node",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@esbuild-kit/core-utils": "^3.3.2",
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "better-sqlite3": "^11.10.0",
    "bloom-filters": "^3.0.4",
    "d3": "^7.9.0",
    "dotenv": "^17.2.0",
    "glob": "^11.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/d3": "^7.4.3",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-legacy": "^7.0.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-eslint": "^1.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "esbuild": "^0.25.8"
  },
  "napi": {
    "name": "module-sentinel-rust",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-pc-windows-msvc",
        "x86_64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu"
      ]
    }
  }
}
