{
  "name": "@planet-procgen/module-sentinel-mcp",
  "version": "1.0.0",
  "description": "Module Sentinel MCP Server - Intelligent C++ Module Analysis for Planet ProcGen",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "module-sentinel-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "npm run build:rust && tsc && npm run build:dashboard",
    "build:rust": "node scripts/build-napi.js",
    "build:dashboard": "vite build",
    "dev": "tsx --watch src/dashboard-server.ts",
    "start": "npm run build && node dist/index.js",
    "start:dashboard": "npm run build && tsx src/dashboard-server.ts",
    "lint": "eslint src/**/*.ts --ignore-pattern 'src/**/*.test.ts'",
    "lint:fix": "eslint src/**/*.ts --ignore-pattern 'src/**/*.test.ts' --fix",
    "lint:check": "eslint src/**/*.ts --ignore-pattern 'src/**/*.test.ts' --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.node",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "d3": "^7.9.0",
    "dotenv": "^17.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@napi-rs/cli": "^2.18.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/d3": "^7.4.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "babel-jest": "^30.0.5",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "napi": {
    "name": "module-sentinel-rust",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-pc-windows-msvc",
        "x86_64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu"
      ]
    }
  }
}
