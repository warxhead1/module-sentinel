{
  "name": "@planet-procgen/module-sentinel-mcp",
  "version": "1.0.0",
  "description": "Module Sentinel MCP Server - Intelligent C++ Module Analysis for Planet ProcGen",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "module-sentinel-mcp": "dist/index.js",
    "module-sentinel-config": "dist/cli/config-manager.js"
  },
  "scripts": {
    "build": "tsc && npm run copy:migrations && npm run build:dashboard",
    "copy:migrations": "cp -r src/database/migrations dist/database/",
    "build:dashboard": "vite build",
    "dev": "npm run build && concurrently --names \"TSC,SERVER\" --prefix-colors \"blue,green\" \"tsc --watch\" \"npm run dev:server\"",
    "dev:server": "sleep 2 && NODE_ENV=development tsx --watch unified-server.ts",
    "dev:no-watch": "npm run build && NODE_ENV=development tsx unified-server.ts",
    "start": "npm run build && tsx unified-server.ts",
    "test": "npm run build && tsx test/TestRunner.ts",
    "test:filter": "npm run build && tsx test/TestRunner.ts --filter",
    "test:semantic": "npm run build && tsx test/TestRunner.ts --semantic",
    "test:fast": "npm run build && tsx test/TestRunner.ts --skip-index",
    "test:reset": "npm run build && tsx test/TestRunner.ts --rebuild",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts test/**/*.ts --max-warnings 0",
    "prebuild": "npm run lint:check",
    "db:clear": "npm run build && tsx scripts/force-clear-db.ts",
    "db:seed-languages": "npm run build && tsx src/scripts/seed-languages.ts",
    "db:check-integrity": "npm run build && tsx src/scripts/check-data-integrity.ts",
    "preview": "vite preview",
    "clean": "rm -rf dist dashboard/dist",
    "test:workflows": "tsx scripts/test-workflows.ts",
    "test:workflows:validate": "tsx scripts/test-workflows.ts --validate-only",
    "log:indexer": "tsx scripts/tail-indexer-log.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@esbuild-kit/core-utils": "^3.3.2",
    "@esbuild-kit/esm-loader": "^2.6.5",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "better-sqlite3": "^11.10.0",
    "bloom-filters": "^3.0.4",
    "d3": "^7.9.0",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "glob": "^11.0.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-c-sharp": "^0.23.1",
    "tree-sitter-cpp": "^0.23.4",
    "tree-sitter-go": "^0.23.4",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/d3": "^7.4.3",
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-legacy": "^7.0.1",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-eslint": "^1.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "esbuild": "^0.25.8",
    "tree-sitter": "^0.25.0"
  }
}
