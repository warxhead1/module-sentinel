{
  "name": "@planet-procgen/module-sentinel-mcp",
  "version": "1.0.0",
  "description": "Module Sentinel MCP Server - Intelligent C++ Module Analysis for Planet ProcGen",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "module-sentinel-mcp": "dist/index.js",
    "module-sentinel-config": "dist/cli/config-manager.js"
  },
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "tsc && echo 'âœ… Development build complete'",
    "build:test": "npm run build && npm run test:all",
    "deploy": "npm run build && echo 'ðŸš€ Ready for Claude MCP'",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "dev:claude": "nodemon --exec tsx src/index.ts",
    "dev:mcp": "npm run build:watch",
    "start": "node dist/index.js",
    "test": "npm run build && tsx run-tests.ts",
    "test:rebuild": "npm run build && tsx run-tests.ts --rebuild",
    "test:filter": "npm run build && tsx run-tests.ts --filter",
    "test:all": "npm run build && npm run test",
    "test:ci": "./scripts/ci-test.sh",
    "rebuild:clean": "tsx scripts/rebuild-db.ts --clean",
    "rebuild:normal": "tsx scripts/rebuild-db.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build:dashboard": "tsx scripts/build-dashboard.ts",
    "dashboard": "NODE_ENV=production tsx start-enhanced-dashboard.ts",
    "dashboard:enhanced": "NODE_ENV=production tsx start-enhanced-dashboard.ts",
    "dashboard:watch": "NODE_ENV=production tsx watch start-enhanced-dashboard.ts",
    "dev:dashboard": "NODE_ENV=development tsx watch start-enhanced-dashboard.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.0.1",
    "better-sqlite3": "^11.3.0",
    "claude-code": "^0.0.2",
    "dotenv": "^17.2.0",
    "glob": "^11.0.0",
    "sqlite3": "^5.1.7",
    "stream-json": "^1.9.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@types/puppeteer": "^5.4.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "chokidar": "^4.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "puppeteer": "^24.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
