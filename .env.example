# Module Sentinel Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Gemini API Key for Claude validation features
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Custom project path (defaults to /home/proj/my_proj)
MODULE_SENTINEL_PROJECT_PATH=/home/proj/my_proj

# Database paths (based on NODE_ENV)
# Development/Test database (used when NODE_ENV != production)
DEV_DB=/home/proj/.module-sentinel/development.db

# Production database (used when NODE_ENV=production)
PROD_DB=/home/proj/.module-sentinel/production.db

# Optional: Visualization API port (defaults to 7071)
VISUALIZATION_PORT=7071

# Optional: Enable debug logging
DEBUG=false